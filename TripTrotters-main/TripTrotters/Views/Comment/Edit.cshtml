@using TripTrotters.ViewModels;
@model CommentViewModel;

@{
}
<form asp-controller="Comment" asp-action="Edit" asp-route-Id="@Model.Id" method="post">
    <input type="hidden" id="UserId" name="UserId" asp-for="UserId" />
    <input asp-for="Id" type="hidden" />
    <div class="row">
        <div class="form-group col-10">
            <input asp-for="Text" class="form-control" value="@Model.Text" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="form-group col-2">
            <button type="submit" class="btn">
                <span class="far fa-comment"></span>
            </button>
        </div>
    </div>

</form>


