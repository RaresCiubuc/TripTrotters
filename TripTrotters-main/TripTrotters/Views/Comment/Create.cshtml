@using TripTrotters.ViewModels;

@model CommentViewModel;
@{
}
<form asp-controller="Comment" asp-action="Create" asp-route-postId="@Model.PostId" method="post">
    <input type="hidden" id="UserId" name="UserId" asp-for="UserId" />
    <input asp-for="PostId" type="hidden" />

    <div class="row">
        <div class="form-group  col-10">
            <input asp-for="Text" class="form-control" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="form-group col-2">
            <input type="submit" value="Add" class="btn btn" />
        </div>
    </div>
</form>