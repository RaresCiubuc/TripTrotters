@using TripTrotters.ViewModels;
@model ReviewViewModel;

<form asp-controller="Review" asp-action="Create" asp-route-ApartmentId="@Model.ApartmentId" method="post">
    <div class="form-group mb-3">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="ApartmentId" />
        <h3>Leave a review</h3>
        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Rating">Rating</label>
        <input type="number" asp-for="Rating" class="form-control" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary" style="background-color: #2ec42e; border:none">Submit Review</button>
    </div>
</form>
