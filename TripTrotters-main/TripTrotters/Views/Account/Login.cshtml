@using TripTrotters.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <h1 class="text-center mt-3">Log in to your account</h1>
        @if(TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2 mt-2">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <div class="form-group">
                            <label asp-for="EmailAddress" class="control-label">Email Address</label>
                            <input asp-for="EmailAddress" class="form-control">
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                   <div class="mb-3">
                        <div class="form-group">
                            <input class="btn btn-lg btn-success float right" type="submit" value="Log in" />
                            <a class="btn btn-lg btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                        </div>
                   </div>
                </form>
            </div>
        </div>
    </div>
</div>
